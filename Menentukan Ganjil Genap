/**
 *
 * @author ainul 87
 */
public class MenampilkanGanjilGenap {
      public static void main(String[] args) {
    int B;
    Scanner bilangan = new Scanner(System.in);
    System.out.print("Masukkan sebuah bilangan : ");
    B = bilangan.nextInt();
    if (B % 2 == 0) {
      System.out.print("Bilangan " + B + " adalah genap.\n");
    } else {
      System.out.print("Bilangan " + B + " adalah ganjil.\n");
    }
}
}
      
